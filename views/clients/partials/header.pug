include ../mixins/sub-menu.pug

header(class="header")
    div(class="container")
        div(class="main__header")
            div(class="inner-logo")
                a(href="/") 
                    img(src="/clients/images/logo.svg", alt="Logo")
            
            .col-5
                form(
                action="/search"
                method="GET"
                ) 
                    div(class="form-group d-flex mb-0")
                        input(
                        type="text"
                        placeholder="Nhập từ khóa..."
                        class="form-control"
                        name="keyword"
                        value=keyword
                        )
                        button(
                        type="submit"
                        class="btn btn-primary"
                        ) Tìm

            div(class="inner-menu")
                ul 
                    li 
                        a(href="/") Trang chu
                    li(class="sub-menu")
                        -const pathProduct = "/products"
                        a(href=pathProduct) San pham
                        if(layoutProductCategory)
                            +sub-menu(layoutProductCategory,pathProduct)
                    li  
                        a(href="/cart") Giỏ hàng (#{miniCart ? miniCart.totalQuantity :"0"})
                    if(user)
                        li
                            a(href="/user/logout") Đăng xuất
                    else
                        li 
                            a(href="/user/register") Đăng kí
                        li 
                            a(href="/user/login") Đăng nhập 
                    
                    
                
                
