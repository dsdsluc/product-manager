extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main

    h1(class="mb-4") Chinh sua tài khoản
    +alert-error(5000)
    +alert-success(5000)

    form(
    action=`/${prefixAdmin}/my-account/edit?_method=PATCH `
    enctype="multipart/form-data"
    method="POST"
    )
        div(class="form-group")
            label(for="fullName") Họ tên
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
                value=user.fullName
            )
        div(class="form-group")
            label(for="email") Email 
            input(
                type="email"
                class="form-control" id="email"
                name="email"
                required
                value=user.email
            )
        div(class="form-group")
            label(for="password") Mật khẩu 
            input(
                type="password"
                id="password"
                class="form-control" 
                name="password" 
                
            )
        div(class="form-group")
            label(for="phone") So dien thoai 
            input(
                type="text"
                id="phone"
                class="form-control" 
                name="phone" 
                required
                value=user.phone
            )
        div(
            class="form-group" 
            upload-image
            )
            label(for="avatar") Avatar
            input(
            type="file"
            class="form-control-file"
            id="avatar"
            name="avatar"
            accept="image/*" 
            upload-image-input
            )
            img(
            src=user.avatar
            class="image-preview"
            upload-image-preview    
            )
        div(class="form-group")
            button(
            type="submit"
            class="btn btn-primary"
            ) Cập nhật